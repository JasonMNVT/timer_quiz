{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Category</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Actions</th>
				</tr>
				<tr>
					<td>{{ category.id }}</td>
					<td>{{ category.name }}</td>
					<td style="display: flex;justify-content: center;gap: 10px">
						<a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-secondary">edit</a>
						{{ include('category/_delete_form.html.twig') }}
					</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_category_index') }}" class="btn btn-primary"><i class="fa-solid fa-arrow-left"></i> back to list</a>
	</div>
{% endblock %}
