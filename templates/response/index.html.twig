{% extends 'base.html.twig' %}

{% block title %}Timer Quiz
{% endblock %}

{% block body %}
	{% block menu %}
		{% include "component/navbar.html.twig" %}
	{% endblock %}
	<div class="container">
		<h2 class="display-5">Response(s)</h2>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>IsResponse</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for response in responses %}
					<tr>
						<td>{{ response.id }}</td>
						<td>{{ response.title }}</td>
						<td>{{ response.isResponse ? 'Yes' : 'No' }}</td>
						<td>
							<a href="{{ path('app_response_show', {'id': response.id}) }}">show</a>
							<a href="{{ path('app_response_edit', {'id': response.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_response_new') }}">Create new</a>
	</div>
{% endblock %}
