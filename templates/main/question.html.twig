{% extends 'base.html.twig' %}

{% block title %}
	Timer Quiz
{% endblock %}

{% block body %}
	<div class="container">
		<div class="question-container">
			<h1 class="timer display-1"></h1>
			<h2 class="quiz-question">
				{{ question.title }}
			</h2>
			<div class="responses-container">
				{% for response in responses %}
					<button class="btn btn-outline-light">
						{{ response.title }}
					</button>
				{% else %}
				<table>
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				</table>
			</div>
				{% endfor %}
		</div>
		{% if next_question %}
			<a href={{ path('event_question', {'id': next_question.id}) }} style="display: none;" id="next_question"/>
		{% else %}
			<a href={{ path('homepage')}} style="display: none;" id="next_question"/>
		{% endif %}
	</div>
<script>
	let count = 11

	const h1 = document.querySelector(".timer");

	setTimeout(() => {
		document.getElementById('next_question').click();
	}, 2000);

	let interval = setInterval(() => {
	h1.innerHTML = -- count;
	if (count === 0) 
	clearInterval(interval);
	}, 1000);
</script>
{% endblock %}
